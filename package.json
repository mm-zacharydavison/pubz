{
  "name": "pubb",
  "version": "0.1.0",
  "description": "Interactive CLI for publishing monorepo packages to npm",
  "type": "module",
  "bin": {
    "pubb": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build src/cli.ts --outdir dist --target node",
    "dev": "bun run src/cli.ts",
    "typecheck": "tsc --noEmit",
    "lint": "bunx biome check src/",
    "lint:fix": "bunx biome check --write src/"
  },
  "keywords": [
    "npm",
    "publish",
    "monorepo",
    "cli",
    "release"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.1.14",
    "typescript": "^5.7.2"
  }
}
